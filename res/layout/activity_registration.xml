<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/registrieren"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/vorname"
            android:id="@+id/textView2"
            android:layout_marginLeft="10dp" android:layout_marginTop="60dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nachname"
            android:id="@+id/textView3" android:layout_below="@+id/textView2" android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="30dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/spitzname"
            android:id="@+id/textView4" android:layout_below="@+id/textView3" android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:layout_marginTop="55dp" android:layout_toRightOf="@+id/textView3"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:layout_below="@+id/editText" android:layout_marginTop="13dp"
            android:layout_alignParentEnd="true" android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:layout_below="@+id/editText2" android:layout_marginTop="11dp"
            android:layout_alignParentEnd="true" android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameInBestenliste"
            android:id="@+id/checkBox"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView4" android:layout_marginTop="28dp" android:checked="false"
            android:textSize="22sp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/questionbutton"
            android:text="@string/registrieren"
            android:textColor="#CCFFFFFF"
            android:textSize="22sp"
            android:id="@+id/button" android:layout_below="@+id/checkBox" android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:paddingLeft="40dp" android:paddingRight="40dp" android:paddingTop="20dp"
            android:paddingBottom="20dp"/>

</RelativeLayout>